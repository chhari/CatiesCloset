<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context="com.example.yashnanavati.catiescloset.DonationModule.CashdonActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/receiptLay"
        android:weightSum="0">

        <!-- Linear layout added as required for a scrollview -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="30dp"
            android:layout_weight="3"
            app:srcCompat="@drawable/ccdel2" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text=" Donation Receipt"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="28dp" />




        <TextView
            android:id="@+id/txtDonorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" Donor's Information"
            android:layout_gravity="left"
            android:paddingTop="15dp"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:paddingBottom="20dp"
            android:paddingRight="3dp">


            <android.support.design.widget.TextInputLayout

                android:id="@+id/signup_input_layout_name"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/signup_input_name"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Donor Name" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:id="@+id/signup_input_layout_email"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                >
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/signup_input_layout_address"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/signup_input_address"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Address" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/signup_input_layout_country"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/signup_input_country"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Country"

                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/signup_input_layout_state"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/signup_input_state"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="State"

                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/zip1"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/zip2"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="ZipCode"

                    android:singleLine="true"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <Space
                android:layout_width="1dp"
                android:layout_height="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtPledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" Total pledge amount: "
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"/>



                <TextView
                    android:id="@+id/txtTotalPledge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text=" 3 items"
                    android:alpha="0.8"
                    android:gravity="right"
                    android:textSize="24dp"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout

                android:id="@+id/typeofdonaiton"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/typeofdonation2"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Type of Donation"

                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout

                android:id="@+id/descriptionreceipt"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/descriptionrec"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Decription"

                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout

                android:id="@+id/valuerec"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp">

                <EditText

                    android:id="@+id/valuereceipt"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:ems="10"

                    android:hint="Value"

                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <TextView
                android:id="@+id/txtthnx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" Thank you for your support!"
                android:layout_gravity="center_horizontal"
                android:textSize="24dp"/>



            





        </LinearLayout>
    </LinearLayout>



</ScrollView>
